<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="device name"
            android:gravity="center"
            android:id="@+id/device_name_textView"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="device type"
            android:gravity="center"
            android:id="@+id/device_type_textView"
            android:background="#00bfff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="connect"
            android:id="@+id/connect_button"
            android:background="#a4c639"
            android:layout_margin="5dp"
            android:onClick="connectButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="rtt"
            android:id="@+id/rtt_button"
            android:background="#a4c639"
            android:layout_margin="5dp"
            android:onClick="rttButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="packet loss"
            android:id="@+id/pkt_loss_button"
            android:background="#a4c639"
            android:layout_margin="5dp"
            android:onClick="pktLossButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="throughput"
            android:id="@+id/throughput_button"
            android:background="#a4c639"
            android:layout_margin="5dp"
            android:onClick="throughputButton"/>
    </LinearLayout>

</LinearLayout>
