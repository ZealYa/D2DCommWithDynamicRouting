<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="tausif.androidprojects.d2dcommwithdynamicrouting.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/top_linearLayout">

        <Button
            android:id="@+id/BT_RSSI_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="bt rssi"
            android:onClick="bluetoothRSSIButton"/>

        <Button
            android:id="@+id/BT_RTT_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="bt rtt"
            android:onClick="bluetoothRTTButton"/>

        <Button
            android:id="@+id/BT_Loss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="bt loss" />

        <Button
            android:id="@+id/WIFI_RTT_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="wifi rtt" />

        <Button
            android:id="@+id/WIFI_Loss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="wifi loss" />
    </LinearLayout>

    <ListView
        android:id="@+id/device_listView"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_linearLayout" />

</RelativeLayout>
