<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="tausif.androidprojects.d2dcommwithdynamicrouting.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/distance_size_holder">

        <EditText
            android:id="@+id/distance_editText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="distance"
            android:background="@android:color/holo_red_dark"/>

        <EditText
            android:id="@+id/pkt_size_editText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:inputType="numberDecimal"
            android:hint="packet size"
            android:background="@android:color/holo_green_dark"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="start rssi"
            android:onClick=""/>
    </LinearLayout>

    <ListView
        android:id="@+id/device_listView"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/distance_size_holder" />

</RelativeLayout>
